<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chinmayee.mainactivity.OppDetail"
    tools:showIn="@layout/activity_opp_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:id="@+id/image"
                    android:background="@drawable/webpic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:id="@+id/favorite_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/btn_star_big_on"
                    android:background="#00ffffff"
                    android:layout_alignTop="@+id/image"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oppDate"
                android:text="@string/oppDate"
                android:layout_marginTop="15px"
                android:layout_marginLeft="40px"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oppName"
                android:text="@string/oppName"
                android:layout_marginTop="15px"
                android:layout_marginLeft="40px"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DECRIPTION:"
                android:layout_marginTop="15px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="10px"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oppDes"
                android:text="@string/oppDes"
                android:layout_marginTop="10px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="10px"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCATION:"
                android:layout_marginTop="15px"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oppLoc"
                android:text="@string/oppLoc"
                android:layout_marginTop="10px"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

            <!--<fragment
                android:id="@+id/map1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                class="com.google.android.gms.maps.MapFragment"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT:"
                android:layout_marginTop="15px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="10px"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oppContact"
                android:text="@string/oppContact"
                android:layout_marginTop="10px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="10px"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATTENDEES:"
                android:layout_marginTop="15px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="10px"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/attendeesList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/e1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10px"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/a1"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profimg2" />

                        <TextView
                            android:id="@+id/a1Name"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="60px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/a1Name"
                            android:textSize="10dp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/a2"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profimg2" />

                    <ImageView
                        android:id="@+id/a3"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profimg2" />

                    <ImageView
                        android:id="@+id/a4"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profimg2" />

                    <ImageView
                        android:id="@+id/a5"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profimg2" />

                </LinearLayout>-->
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
